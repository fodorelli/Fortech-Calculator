<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    android:padding="0dp"
    tools:context="fortech.calculator.MainActivity">

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@android:color/holo_orange_light"
        android:text="0" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button20"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:background="@android:color/holo_blue_light"
        android:text="-" />

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button20"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:background="@android:color/holo_blue_light"
        android:text="+" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button21"
        android:layout_alignStart="@+id/button21"
        android:layout_marginBottom="17dp"
        android:background="@android:color/holo_orange_light"
        android:text="1" />

    <Button
        android:id="@+id/button24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button23"
        android:layout_alignEnd="@+id/button20"
        android:background="@android:color/holo_orange_light"
        android:text="2" />

    <Button
        android:id="@+id/button25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button24"
        android:layout_alignStart="@+id/button22"
        android:background="@android:color/holo_orange_light"
        android:text="3" />

    <Button
        android:id="@+id/button26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button23"
        android:layout_alignStart="@+id/button23"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_orange_light"
        android:text="4" />

    <Button
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button26"
        android:layout_alignStart="@+id/button24"
        android:background="@android:color/holo_orange_light"
        android:text="5" />

    <Button
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button27"
        android:layout_alignEnd="@+id/button25"
        android:background="@android:color/holo_orange_light"
        android:text="6" />

    <Button
        android:id="@+id/button29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button26"
        android:layout_alignStart="@+id/button26"
        android:layout_marginBottom="14dp"
        android:background="@android:color/holo_orange_light"
        android:text="7" />

    <Button
        android:id="@+id/button30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button29"
        android:layout_alignStart="@+id/button27"
        android:background="@android:color/holo_orange_light"
        android:text="8" />

    <Button
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button30"
        android:layout_alignEnd="@+id/button28"
        android:background="@android:color/holo_orange_light"
        android:text="9" />

    <Button
        android:id="@+id/button32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button29"
        android:layout_alignEnd="@+id/button29"
        android:layout_marginBottom="17dp"
        android:background="@android:color/holo_red_dark"
        android:text="Clear" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button32"
        android:layout_alignEnd="@+id/button31"
        android:background="@android:color/holo_blue_light"
        android:text="=" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:gravity="bottom|right"
        android:text=""
        android:textSize="80sp"
        android:textStyle="bold" />
</RelativeLayout>
